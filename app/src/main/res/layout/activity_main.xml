<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etNeme_room"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

    </ListView>

    <EditText
        android:id="@+id/etNeme_room"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btn_add_room" />

    <Button
        android:id="@+id/btn_add_room"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/ic_add_black_24dp"
        android:text="" />

    <Button
        android:layout_below="@+id/listView"
        android:id="@+id/btn_maps"
        style="?android:attr/borderlessButtonStyle"
        android:drawableLeft="@drawable/common_google_signin_btn_icon_dark"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_add_room"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
